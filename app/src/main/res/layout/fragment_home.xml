<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mhstudio.dbapp.HomeFragment">

    <!--<Button-->
        <!--android:id="@+id/btn_home"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Le Button"/>-->

    <TextView
        android:id="@+id/home_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_medium_material"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_welcome_user"
        android:text="logout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp">

        <Button
            android:id="@+id/btn_home_listspot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_trans_border"
            android:text="@string/list_your_parking_spot"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <Button
            android:id="@+id/btn_home_lookspot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_trans_border"
            android:text="@string/look_for_parking"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>


</RelativeLayout>
