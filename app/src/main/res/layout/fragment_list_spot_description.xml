<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="listparkingspot.ListSpotDescriptionFragment"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/img_spot_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/img_spot"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cars_street_village_straight"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/img_spot_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray_dark"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_spot_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Street, City, State"
                    android:textColorHint="@color/gray_dark"
                    android:textColor="@color/background_floating_material_dark"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amenities"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/check_spot_gated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gated"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/background_floating_material_dark"
                        android:buttonTint="@color/blue"/>
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/check_spot_shaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shaded"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/background_floating_material_dark"
                        android:buttonTint="@color/blue"/>
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/check_spot_handicap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="handicap accessible"
                        android:textColor="@color/background_floating_material_dark"
                        android:buttonTint="@color/blue"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray_dark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tv_spot_fromtime"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:hint="Start time"
                            android:textColorHint="@color/gray_dark"
                            android:gravity="center"
                            android:textSize="@dimen/abc_text_size_subhead_material"
                            android:textColor="@color/background_floating_material_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:textColor="@color/background_floating_material_dark"/>
                        <TextView
                            android:id="@+id/tv_spot_totime"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:hint="End time"
                            android:textColorHint="@color/gray_dark"
                            android:gravity="center"
                            android:textSize="@dimen/abc_text_size_subhead_material"
                            android:textColor="@color/background_floating_material_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tv_spot_date"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:hint="Date"
                            android:textColorHint="@color/gray_dark"
                            android:gravity="center"
                            android:textSize="@dimen/abc_text_size_subhead_material"
                            android:textColor="@color/background_floating_material_dark"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_spot_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_trans_border"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
